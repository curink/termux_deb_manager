#!/bin/bash
# Manajemen backup & restore .deb di Termux (lokasi sdcard)

CACHE_DIR="/data/data/com.termux/cache/apt/archives"
BACKUP_DIR="/storage/0403-0201/berkas/termux-debs"

mkdir -p "$BACKUP_DIR"

usage() {
  cat <<EOF
  Debman v1.1.0
  
  Usage: $0 {backup [pkg]|restore [pkg...]|restore-with-deps [pkg...]|update|list|remove [pkg]|clean-old|clean-cache|status|help}

  backup                            â†’ backup semua .deb dari cache
  backup <pkg>                      â†’ backup hanya paket <pkg>
  restore                           â†’ restore semua .deb dari backup
  restore <pkg1 pkg2 ...>           â†’ restore beberapa paket sekaligus
  restore-with-deps <pkg1 pkg2 ...> â†’ restore paket beserta dependensinya
  update                            â†’ update paket yang versi backup lebih baru
  list                              â†’ tampilkan daftar .deb di backup
  remove                            â†’ hapus semua .deb di backup
  remove <pkg>                      â†’ hapus semua versi .deb untuk paket <pkg>
  clean-old                         â†’ hapus versi lama di backup, simpan hanya versi terbaru
  clean-cache                       â†’ hapus semua file .deb di cache Termux
  status                            â†’ tampilkan ringkasan status cache & backup
  help | -h                         â†’ tampilkan pesan ini
EOF
}

# Fungsi untuk mengecek apakah paket sudah terinstall
is_installed() {
    local pkg="$1"
    dpkg-query -W -f='${Status}' "$pkg" 2>/dev/null | grep -q "install ok installed"
    return $?
}

# Fungsi untuk mendapatkan versi paket yang terinstall
get_installed_version() {
    local pkg="$1"
    dpkg-query -W -f='${Version}' "$pkg" 2>/dev/null
}

# Fungsi untuk mendapatkan versi dari file .deb
get_deb_version() {
    local deb_file="$1"
    dpkg-deb -f "$deb_file" Version 2>/dev/null
}

# Fungsi untuk membandingkan versi
version_gt() {
    test "$(printf '%s\n' "$@" | sort -V | head -n 1)" != "$1"
}

# Fungsi untuk mendapatkan dependensi paket
get_dependencies() {
    local pkg="$1"
    local deps=()
    
    # Dapatkan informasi dependensi dari paket .deb
    local deb_file=$(ls "$BACKUP_DIR"/${pkg}_*.deb 2>/dev/null | head -n1)
    
    if [ -f "$deb_file" ]; then
        # Ekstrak informasi dependensi menggunakan dpkg-deb
        local depends=$(dpkg-deb -f "$deb_file" Depends 2>/dev/null || echo "")
        
        if [ -n "$depends" ]; then
            # Parse dependensi (hapus versi requirements dan split by pipe/komma)
            IFS=',' read -ra dep_list <<< "$depends"
            for dep in "${dep_list[@]}"; do
                # Hapus spasi di awal/akhir, dan ambil hanya nama paket (sebelum spasi pertama)
                dep=$(echo "$dep" | sed 's/^[[:space:]]*//;s/[[:space:]]*$//' | cut -d' ' -f1)
                # Hapus karakter pipe (|) jika ada
                dep=$(echo "$dep" | tr -d '|')
                if [ -n "$dep" ] && [[ ! " ${deps[@]} " =~ " ${dep} " ]]; then
                    deps+=("$dep")
                fi
            done
        fi
    fi
    
    echo "${deps[@]}"
}

# Fungsi recursive untuk mendapatkan semua dependensi (termasuk dependensi dari dependensi)
get_all_dependencies() {
    local pkg="$1"
    local all_deps=()
    local processed=()
    
    recursive_get_deps() {
        local current_pkg="$1"
        
        # Cek jika paket sudah diproses
        if [[ " ${processed[@]} " =~ " ${current_pkg} " ]]; then
            return
        fi
        processed+=("$current_pkg")
        
        # Dapatkan dependensi langsung
        local direct_deps=($(get_dependencies "$current_pkg"))
        
        for dep in "${direct_deps[@]}"; do
            # Cek jika dependensi tersedia di backup
            if ls "$BACKUP_DIR"/${dep}_*.deb >/dev/null 2>&1; then
                # Tambahkan ke semua dependensi jika belum ada
                if [[ ! " ${all_deps[@]} " =~ " ${dep} " ]]; then
                    all_deps+=("$dep")
                fi
                # Rekursif dapatkan dependensi dari dependensi
                recursive_get_deps "$dep"
            fi
        done
    }
    
    recursive_get_deps "$pkg"
    
    # Hapus duplikat dan kembalikan array
    local unique_deps=()
    for dep in "${all_deps[@]}"; do
        if [[ ! " ${unique_deps[@]} " =~ " ${dep} " ]]; then
            unique_deps+=("$dep")
        fi
    done
    
    echo "${unique_deps[@]}"
}

# Fungsi untuk mendapatkan semua dependensi untuk multiple packages
get_all_dependencies_multiple() {
    local packages=("$@")
    local all_deps=()
    
    for pkg in "${packages[@]}"; do
        deps=($(get_all_dependencies "$pkg"))
        all_deps+=("${deps[@]}")
    done
    
    # Hapus duplikat
    local unique_deps=()
    for dep in "${all_deps[@]}"; do
        if [[ ! " ${unique_deps[@]} " =~ " ${dep} " ]] && [[ ! " ${packages[@]} " =~ " ${dep} " ]]; then
            unique_deps+=("$dep")
        fi
    done
    
    echo "${unique_deps[@]}"
}

# Fungsi untuk mendapatkan urutan install yang benar (dependensi pertama)
get_install_order() {
    local packages=("$@")
    local install_order=()
    local processed=()
    
    # Fungsi recursive untuk menentukan urutan
    resolve_deps() {
        local pkg="$1"
        
        # Cek jika paket sudah diproses
        if [[ " ${processed[@]} " =~ " ${pkg} " ]]; then
            return
        fi
        processed+=("$pkg")
        
        # Dapatkan dependensi paket ini
        local deps=($(get_dependencies "$pkg"))
        
        # Process dependencies first
        for dep in "${deps[@]}"; do
            # Cek jika dependensi ada dalam daftar packages dan tersedia di backup
            if [[ " ${packages[@]} " =~ " ${dep} " ]] && ls "$BACKUP_DIR"/${dep}_*.deb >/dev/null 2>&1; then
                resolve_deps "$dep"
            fi
        done
        
        # Tambahkan paket ke urutan install setelah dependensinya
        if [[ ! " ${install_order[@]} " =~ " ${pkg} " ]]; then
            install_order+=("$pkg")
        fi
    }
    
    # Process semua packages
    for pkg in "${packages[@]}"; do
        resolve_deps "$pkg"
    done
    
    echo "${install_order[@]}"
}

# Fungsi untuk install paket hanya jika belum terinstall atau versi berbeda
install_if_needed() {
    local pkg="$1"
    local deb_file=$(ls "$BACKUP_DIR"/${pkg}_*.deb 2>/dev/null | head -n1)
    
    if [ ! -f "$deb_file" ]; then
        echo "âš ï¸ File .deb tidak ditemukan untuk paket: $pkg"
        return 1
    fi
    
    local deb_version=$(get_deb_version "$deb_file")
    
    if is_installed "$pkg"; then
        local installed_version=$(get_installed_version "$pkg")
        
        if [ "$installed_version" = "$deb_version" ]; then
            echo "âœ“ $pkg (v$installed_version) sudah terinstall, dilewati"
            return 0
        else
            echo "ğŸ”„ $pkg versi berbeda: terinstall v$installed_version, backup v$deb_version"
            echo "ğŸ“¥ Upgrade: $pkg"
            dpkg -i "$deb_file"
            return $?
        fi
    else
        echo "ğŸ“¥ Install: $pkg (v$deb_version)"
        dpkg -i "$deb_file"
        return $?
    fi
}

# Fungsi untuk update paket jika versi backup lebih baru
update_if_newer() {
    local pkg="$1"
    local deb_file=$(ls "$BACKUP_DIR"/${pkg}_*.deb 2>/dev/null | head -n1)
    
    if [ ! -f "$deb_file" ]; then
        echo "âš ï¸ File .deb tidak ditemukan untuk paket: $pkg"
        return 1
    fi
    
    local deb_version=$(get_deb_version "$deb_file")
    
    if is_installed "$pkg"; then
        local installed_version=$(get_installed_version "$pkg")
        
        if [ "$installed_version" = "$deb_version" ]; then
            echo "âœ“ $pkg (v$installed_version) sudah versi terbaru"
            return 0
        elif version_gt "$deb_version" "$installed_version"; then
            echo "ğŸ”„ $pkg versi lebih baru tersedia: terinstall v$installed_version, backup v$deb_version"
            echo "ğŸ“¥ Upgrade: $pkg"
            dpkg -i "$deb_file"
            return $?
        else
            echo "â„¹ï¸  $pkg versi backup lebih lama: terinstall v$installed_version, backup v$deb_version (dilewati)"
            return 0
        fi
    else
        echo "â„¹ï¸  $pkg belum terinstall, gunakan restore untuk install"
        return 1
    fi
}

backup_pkg() {
  local pkg="$1"
  local files=("$CACHE_DIR"/${pkg}_*.deb)
  [ -e "${files[0]}" ] || { echo "âš ï¸ Tidak ada cache untuk paket: $pkg"; return; }

  for deb in "${files[@]}"; do
    echo "ğŸ“¥ Menyalin $deb â†’ $BACKUP_DIR/"
    cp -v "$deb" "$BACKUP_DIR/"
    # auto clean versi lama
    local base=$(basename "$deb")
    local old=$(ls "$BACKUP_DIR"/${pkg}_*.deb 2>/dev/null | grep -v "$base")
    if [ -n "$old" ]; then
      echo "ğŸ—‘ï¸  Hapus versi lama untuk $pkg: $old"
      rm -fv $old
    fi
  done
}

case "$1" in
  backup)
    if [ -n "$2" ]; then
      echo "ğŸ“¦ Backup paket: $2"
      backup_pkg "$2"
    else
      echo "ğŸ“¦ Backup semua paket dari cache: $CACHE_DIR â†’ $BACKUP_DIR"
      for deb in "$CACHE_DIR"/*.deb; do
        [ -e "$deb" ] || { echo "âš ï¸ Tidak ada file .deb di cache"; break; }
        pkg=$(basename "$deb" | cut -d'_' -f1)
        backup_pkg "$pkg"
      done
    fi
    echo "âœ… Backup selesai."
    ;;
  restore)
    shift
    if [ $# -eq 0 ]; then
      echo "â™»ï¸  Restore semua paket dari $BACKUP_DIR"
      for deb in "$BACKUP_DIR"/*.deb; do
        [ -e "$deb" ] || { echo "âš ï¸ Tidak ada file .deb di backup"; break; }
        pkg=$(basename "$deb" | cut -d'_' -f1)
        install_if_needed "$pkg"
      done
    else
      echo "â™»ï¸  Restore paket: $@ dari $BACKUP_DIR"
      for pkg in "$@"; do
        install_if_needed "$pkg"
      done
    fi
    echo "âœ… Restore selesai."
    ;;
  restore-with-deps)
    shift
    if [ $# -eq 0 ]; then
      echo "âŒ Usage: $0 restore-with-deps <package1> [package2 ...]"
      exit 1
    fi
    
    echo "â™»ï¸  Restore paket $@ beserta dependensinya"
    
    # Dapatkan semua dependensi (termasuk dependensi dari dependensi)
    echo "ğŸ” Mencari dependensi untuk $@..."
    all_deps=($(get_all_dependencies_multiple "$@"))
    
    # Tambahkan paket utama ke daftar
    all_packages=("${all_deps[@]}" "$@")
    
    if [ ${#all_deps[@]} -gt 0 ]; then
        echo "ğŸ“¦ Semua dependensi yang ditemukan: ${all_deps[*]}"
        
        # Dapatkan urutan install yang benar (dependensi pertama)
        echo "ğŸ”§ Menentukan urutan install..."
        install_order=($(get_install_order "${all_packages[@]}"))
        
        echo "ğŸ“‹ Urutan install: ${install_order[*]}"
        
        # Install semua paket dalam urutan yang benar
        for pkg in "${install_order[@]}"; do
            install_if_needed "$pkg"
        done
    else
        echo "â„¹ï¸  Tidak ada dependensi yang ditemukan di backup"
        # Install hanya paket utama
        for pkg in "$@"; do
            install_if_needed "$pkg"
        done
    fi
    echo "âœ… Restore dengan dependensi selesai."
    ;;
  update)
    shift
    echo "ğŸ”„ Update paket yang versi backup lebih baru"
    
    if [ $# -eq 0 ]; then
        # Update semua paket yang ada di backup
        updated_count=0
        for deb in "$BACKUP_DIR"/*.deb; do
            [ -e "$deb" ] || { echo "âš ï¸ Tidak ada file .deb di backup"; break; }
            pkg=$(basename "$deb" | cut -d'_' -f1)
            if update_if_newer "$pkg"; then
                updated_count=$((updated_count + 1))
            fi
        done
        echo "âœ… Update selesai. $updated_count paket diperiksa."
    else
        # Update paket tertentu
        for pkg in "$@"; do
            update_if_newer "$pkg"
        done
        echo "âœ… Update selesai."
    fi
    ;;
  list)
    echo "ğŸ“‚ Daftar file .deb di $BACKUP_DIR:"
    ls -lh "$BACKUP_DIR"
    ;;
  remove)
    if [ -n "$2" ]; then
      echo "ğŸ—‘ï¸  Hapus semua versi $2 dari $BACKUP_DIR"
      rm -v "$BACKUP_DIR"/${2}_*.deb 2>/dev/null || echo "âš ï¸ Tidak ada file untuk $2"
    else
      echo "ğŸ—‘ï¸  Hapus semua backup di $BACKUP_DIR"
      rm -v "$BACKUP_DIR"/*.deb 2>/dev/null || echo "âš ï¸ Backup kosong"
    fi
    echo "âœ… Remove selesai."
    ;;
  clean-old)
    echo "ğŸ§¹ Bersihkan versi lama di backup, sisakan versi terbaru"
    for f in "$BACKUP_DIR"/*.deb; do
      [ -e "$f" ] || continue
      pkg=$(basename "$f" | cut -d'_' -f1)
      latest=$(ls -t "$BACKUP_DIR"/${pkg}_*.deb | head -n1)
      for old in $(ls "$BACKUP_DIR"/${pkg}_*.deb | grep -v "$latest"); do
        echo "ğŸ—‘ï¸  Hapus versi lama: $old"
        rm -fv "$old"
      done
    done
    echo "âœ… Clean-old selesai."
    ;;
  clean-cache)
    echo "ğŸ§¹ Bersihkan semua file .deb di cache: $CACHE_DIR"
    rm -v "$CACHE_DIR"/*.deb 2>/dev/null || echo "âš ï¸ Cache kosong"
    echo "âœ… Cache dibersihkan."
    ;;
  status)
    if [ -n "$2" ]; then
      pkg="$2"
      echo "ğŸ“¦ Status paket: $pkg"

      # Cache
      cache_files=$(ls "$CACHE_DIR"/${pkg}_*.deb 2>/dev/null || true)
      if [ -n "$cache_files" ]; then
        echo "- Cache:"
        echo "  $(echo "$cache_files" | wc -l) versi"
        echo "$cache_files" | xargs -n1 basename | sed 's/^/    /'
      else
        echo "- Cache: tidak ada"
      fi

      # Backup
      backup_files=$(ls "$BACKUP_DIR"/${pkg}_*.deb 2>/dev/null || true)
      if [ -n "$backup_files" ]; then
        echo "- Backup:"
        echo "  $(echo "$backup_files" | wc -l) versi"
        echo "$backup_files" | xargs -n1 basename | sed 's/^/    /'
        
        # Status install
        if is_installed "$pkg"; then
            installed_version=$(get_installed_version "$pkg")
            latest_deb=$(ls "$BACKUP_DIR"/${pkg}_*.deb 2>/dev/null | head -n1)
            if [ -f "$latest_deb" ]; then
                deb_version=$(get_deb_version "$latest_deb")
                if [ "$installed_version" = "$deb_version" ]; then
                    echo "- Status: âœ“ Terinstall (v$installed_version) - Versi terbaru"
                elif version_gt "$deb_version" "$installed_version"; then
                    echo "- Status: âš ï¸ Terinstall (v$installed_version) - Versi baru tersedia: v$deb_version"
                else
                    echo "- Status: âœ“ Terinstall (v$installed_version) - Versi backup lebih lama: v$deb_version"
                fi
            else
                echo "- Status: âœ“ Terinstall (v$installed_version)"
            fi
        else
            echo "- Status: âœ— Belum terinstall"
        fi
        
        # Tampilkan dependensi jika ada
        echo "- Dependensi (jika ada di backup):"
        deps=($(get_dependencies "$pkg"))
        if [ ${#deps[@]} -gt 0 ]; then
            for dep in "${deps[@]}"; do
                if ls "$BACKUP_DIR"/${dep}_*.deb >/dev/null 2>&1; then
                    if is_installed "$dep"; then
                        echo "  âœ“ $dep (tersedia, terinstall)"
                    else
                        echo "  âœ“ $dep (tersedia, belum terinstall)"
                    fi
                else
                    echo "  âœ— $dep (tidak tersedia)"
                fi
            done
        else
            echo "  Tidak ada dependensi yang tercatat"
        fi
        
        # Tampilkan dependensi nested jika ada
        echo "- Dependensi bersarang (jika ada di backup):"
        nested_deps=($(get_all_dependencies "$pkg"))
        if [ ${#nested_deps[@]} -gt 0 ]; then
            for dep in "${nested_deps[@]}"; do
                if ls "$BACKUP_DIR"/${dep}_*.deb >/dev/null 2>&1; then
                    if is_installed "$dep"; then
                        echo "  â†³ âœ“ $dep (tersedia, terinstall)"
                    else
                        echo "  â†³ âœ“ $dep (tersedia, belum terinstall)"
                    fi
                else
                    echo "  â†³ âœ— $dep (tidak tersedia)"
                fi
            done
        else
            echo "  Tidak ada dependensi bersarang"
        fi
      else
        echo "- Backup: tidak ada"
        # Status install meski tidak ada backup
        if is_installed "$pkg"; then
            installed_version=$(get_installed_version "$pkg")
            echo "- Status: âœ“ Terinstall (v$installed_version) [tidak ada backup]"
        else
            echo "- Status: âœ— Belum terinstall"
        fi
      fi
    else
      echo "ğŸ“Š Status:"
      echo "- Cache:  $(ls "$CACHE_DIR"/*.deb 2>/dev/null | wc -l) file, total $(du -sh "$CACHE_DIR" 2>/dev/null | cut -f1)"
      if ls "$CACHE_DIR"/*.deb >/dev/null 2>&1; then
        echo "  Paket unik (cache):"
        for pkg in $(ls "$CACHE_DIR"/*.deb 2>/dev/null | xargs -n1 basename | cut -d'_' -f1 | sort -u); do
          count=$(ls "$CACHE_DIR"/${pkg}_*.deb 2>/dev/null | wc -l)
          echo "    $pkg ($count versi)"
        done
      fi

      echo "- Backup: $(ls "$BACKUP_DIR"/*.deb 2>/dev/null | wc -l) file, total $(du -sh "$BACKUP_DIR" 2>/dev/null | cut -f1)"
      if ls "$BACKUP_DIR"/*.deb >/dev/null 2>&1; then
        echo "  Paket unik (backup):"
        for pkg in $(ls "$BACKUP_DIR"/*.deb 2>/dev/null | xargs -n1 basename | cut -d'_' -f1 | sort -u); do
          count=$(ls "$BACKUP_DIR"/${pkg}_*.deb 2>/dev/null | wc -l)
          if is_installed "$pkg"; then
              installed_ver=$(get_installed_version "$pkg")
              latest_deb=$(ls "$BACKUP_DIR"/${pkg}_*.deb 2>/dev/null | head -n1)
              if [ -f "$latest_deb" ]; then
                  deb_ver=$(get_deb_version "$latest_deb")
                  if [ "$installed_ver" = "$deb_ver" ]; then
                      echo "    $pkg ($count versi) âœ“"
                  elif version_gt "$deb_ver" "$installed_ver"; then
                      echo "    $pkg ($count versi) âš ï¸ (v$installed_ver -> v$deb_ver)"
                  else
                      echo "    $pkg ($count versi) âœ“ (v$installed_ver, backup v$deb_ver)"
                  fi
              else
                  echo "    $pkg ($count versi) âœ“"
              fi
          else
              echo "    $pkg ($count versi) âœ—"
          fi
        done
      fi
    fi
    ;;
  help|-h|--help)
    usage
    ;;
  *)
    usage
    ;;
esac
